{% form_theme form '@CHCookieConsent/form/cookie_consent_theme.html.twig' %}

<div
    class="ch-cookie-consent p-3"
    data-controller="cookie-consent"
    data-cookie-consent-target="cookieContainer"
>
    {{ form_start(form, {
        'attr': {
            'class': 'ch-cookie-consent__form',
            'data-cookie-consent-target': 'cookieForm'
        }
    }) }}
        <div class="ch-cookie-consent__category-group" data-cookie-consent-target="cookieCategoryDetails">
            {% for child in form %}
                {% if child.vars.block_prefixes[0] != 'button' %}
                    {{ form_row(child) }}
                {% endif %}
            {% endfor %}
        </div>
        <div class="ch-cookie-consent__btn-group">
            {% for child in form %}
                {% if child.vars.block_prefixes[0] == 'button' %}
                    {{ form_widget(child, {
                        'attr': {
                            'class': 'btn btn-primary my-3 ch-cookie-consent__btn',
                            'data-action': 'click->cookie-consent#submitForm'
                        }
                    }) }}
                {% endif %}
            {% endfor %}
        </div>
    {{ form_end(form) }}
</div>
